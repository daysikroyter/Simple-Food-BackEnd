<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link rel="stylesheet" href="~/Content/styles/style.min.css">
</head>
<body>
<header class="header">
  <div class="overlay"></div>
  <div class="container">
    <nav class="nav">
<a class="nav__logo logo" href="@Url.Action("Index", "Home")">
    <img class="logo__img" src="@Url.Content("~/Content/images/logo.svg")" alt="Логотип">
</a>

      <ul class="menu nav__menu">
            <li class="menu__item">
              @Html.ActionLink("Главная", "Index", "Home", null, new { @class = "menu__link link link--active" })
            </li>
            <li class="menu__item">
              @Html.ActionLink("Блюда", "Catalog", "Home", null, new { @class = "menu__link link link--activeDishes" })
            </li>
            <li class="menu__item">
              @Html.ActionLink("Продукты", "Product", "Home", null, new { @class = "menu__link link" })
            </li>
          </ul>
      <ul class="user-nav">
        <li class="user-nav__item">
          <button class="user-nav__btn link-ico" type="button">
            <span class="sr-only">открыть профиль</span>
            <svg class="ico">
              <use xlink:href="images/icons/sprites/sprite.svg#search"></use>
            </svg>
          </button>
        </li>
        <li class="user-nav__item">
          <button class="user-nav__btn link-ico" type="button">
            <span class="sr-only">открыть корзину</span>
            <svg class="ico">
              <use xlink:href="images/icons/sprites/sprite.svg#basket"></use>
            </svg>
            <span class="user-nav__num">4</span>
          </button>
        </li>
      </ul>
      <button class="burger-btn" type="button">
        <span class="burger-btn__line"></span>
        <span class="burger-btn__line"></span>
        <span class="burger-btn__line"></span>
        <span class="sr-only">открыть Меню</span>
      </button>
      <nav class="menu-burger">
        <div class="menu-burger__box">
          <a class="logo" href="#">
            <img class="logo__img" src="~/Content/images/logo.svg" alt="Логотип">
          </a>
        </div>
        <button class="menu-burger__btn" type="button">
          <span class="menu-burger__btn-line"></span>
          <span class="menu-burger__btn-line"></span>
          <span class="sr-only">закрыть меню</span>
        </button>
        <ul class="menu">
          <li class="menu__item">
          @Html.ActionLink("Главная", "Index", "Home", null, new { @class = "breadcrumbs__link" })          </li>
          <li class="menu__item">
          @Html.ActionLink("Каталог товаров", "Catalog", "Home", null, new { @class = "breadcrumbs__link" })          </li>
          <li class="menu__item">
            <a class="menu__link link" href="#">Контакты</a>
          </li>
        </ul>
        <address class="address">
          <ul class="address__list">
            <li class="address__item">
              <a class="address__link link address__link--location" href="#">ул. Т.Г.Шевченко, 1</a>
            </li>
            <li class="address__item">
              <a class="address__link link address__link--phone" href="tel:+380501112233">380501112233</a>
            </li>
            <li class="address__item">
              <a class="address__link link address__link--email" href="mailto:support@sfood.com">support@sfood.com</a>
            </li>
          </ul>
          <ul class="social">
            <li class="social__item">
              <a class="social__link link-ico" target="_blank" href="#" rel="noopener noreferrer">
                <span class="sr-only">Перейти в facebook</span>
                <svg class="social-ico social-ico--facebook">
                  <use xlink:href="images/icons/sprites/sprite.svg#facebook"></use>
                </svg>
              </a>
            </li>
            <li class="social__item">
              <a class="social__link link-ico" target="_blank" href="#" rel="noopener noreferrer">
                <span class="sr-only">Перейти в twitter</span>
                <svg class="social-ico social-ico--twitter">
                  <use xlink:href="images/icons/sprites/sprite.svg#twitter"></use>
                </svg>
              </a>
            </li>
            <li class="social__item">
              <a class="social__link link-ico" target="_blank" href="#" rel="noopener noreferrer">
                <span class="sr-only">Перейти в instagram</span>
                <svg class="social-ico social-ico--instagram">
                  <use xlink:href="images/icons/sprites/sprite.svg#instagram"></use>
                </svg>
              </a>
            </li>
          </ul>
        </address>
      </nav>
    </nav>
  </div>
</header>
<main class="main">

  <section class="top">
    <div class="container">
      <h2 class="sr-only">Навигация по сайту</h2>
      <ul class="breadcrumbs">
        <li class="breadcrumbs__item">
          <a class="breadcrumbs__link" href="index.html">Главная</a>
        </li>
        <li class="breadcrumbs__item breadcrumbs__item--responsive">
          <a class="breadcrumbs__link" href="catalog.html">Каталог товаров</a>
        </li>
        <li class="breadcrumbs__item">
          <span class="breadcrumbs__link breadcrumbs__link--disabled">Чизбургер с листьями салата</span>
        </li>
      </ul>
    </div>
  </section>
  
  @RenderBody()

</main>

<footer class="footer">
  <div class="footer__top">
    <div class="container">
      <div class="footer__top-inner">
        <div class="footer__top-form">
          <a class="logo footer__logo" href="#">
            <img class="logo__img" src="~/Content/images/logo.svg" alt="Логотип">
          </a>
          <form class="footer__form">
            <label class="sr-only" for="email">email</label>
            <input class="footer__input" name="email" id="email" type="email" placeholder="Ваш email" required>
            <button class="footer__btn btn" type="submit">
              <svg class="subscribe-ico">
                <use xlink:href="images/icons/sprites/sprite.svg#tg"></use>
              </svg>
              Подписаться
            </button>
          </form>
        </div>
        <ul class="footer__list">
          <li class="footer__item">
            <a class="footer__link link" href="#">Как это работает</a>
          </li>
          <li class="footer__item">
            <a class="footer__link link" href="#">О нас</a>
          </li>
          <li class="footer__item">
            <a class="footer__link link" href="#">Скачать приложение</a>
          </li>
          <li class="footer__item">
            <a class="footer__link link" href="#">Продукты</a>
          </li>
          <li class="footer__item">
            <a class="footer__link link" href="#">Новости</a>
          </li>
          <li class="footer__item">
            <a class="footer__link link" href="#">Блог</a>
          </li>
          <li class="footer__item">
            <a class="footer__link link" href="#">Блюда</a>
          </li>
          <li class="footer__item">
            <a class="footer__link link" href="#">Партнеры</a>
          </li>
          <li class="footer__item">
            <a class="footer__link link" href="#">Что нового?</a>
          </li>
          <li class="footer__item">
            <a class="footer__link link" href="#">Меню</a>
          </li>
          <li class="footer__item">
            <a class="footer__link link" href="#">ЧаВо</a>
          </li>
          <li class="footer__item">
            <a class="footer__link link" href="#">Карта сайта</a>
          </li>
        </ul>
        <address class="address">
          <ul class="address__list">
            <li class="address__item">
              <a class="address__link link address__link--location" href="#">ул. Т.Г.Шевченко, 1</a>
            </li>
            <li class="address__item">
              <a class="address__link link address__link--phone" href="tel:+380501112233">380501112233</a>
            </li>
            <li class="address__item">
              <a class="address__link link address__link--email" href="mailto:support@sfood.com">support@sfood.com</a>
            </li>
          </ul>
          <ul class="social">
            <li class="social__item">
              <a class="social__link link-ico" target="_blank" href="#" rel="noopener noreferrer">
                <span class="sr-only">Перейти в facebook</span>
                <span class="social__link-ico"
                  style="background-image: url('../../Content/images/icons/facebook.svg'); width: 10px; height: 20px;"></span>
              </a>
            </li>
            <li class="social__item">
              <a class="social__link link-ico" target="_blank" href="#" rel="noopener noreferrer">
                <span class="sr-only">Перейти в twitter</span>
                <span class="social__link-ico"
                  style="background-image: url('../../Content/images/icons/twitter.svg'); width: 20px; height: 17px;"></span>
              </a>
            </li>
            <li class="social__item">
              <a class="social__link link-ico" target="_blank" href="#" rel="noopener noreferrer">
                <span class="sr-only">Перейти в instagram</span>
                <span class="social__link-ico" style="background-image: url('../../Content/images/icons/instagram.svg'); width: 20px; height: 20px;"></span>
              </a>
            </li>
          </ul>
        </address>
      </div>
    </div>
  </div>
  <p class="footer__copy">
    © 2022 Simple Food
  </p>
</footer>

<script src="~/Scripts/main.min.js"></script>

</body>
</html>